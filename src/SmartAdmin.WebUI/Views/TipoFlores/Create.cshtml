@model SmartAdmin.WebUI.Models.TipoFlor
@{
    ViewData["Title"] = "Criar";
    ViewData["Category1"] = "Tipo Flores";

    ViewData["PageName"] = "TipoFlores_Create";
    ViewData["Heading"] = "<i class='fal fa-plus-circle'></i> Criar Tipo de flores";

    ViewData["PageDescription"] = "O que é esse projeto?";
}
@section HeadBlock {}
<div class="fs-lg fw-300 p-5 bg-white border-faded rounded mb-g">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IrrigacaoSemana" class="control-label"></label>
                    <input asp-for="IrrigacaoSemana" class="form-control" />
                    <span asp-validation-for="IrrigacaoSemana" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IrrigacaoTempo" class="control-label"></label>
                    <input asp-for="IrrigacaoTempo" class="form-control" />
                    <span asp-validation-for="IrrigacaoTempo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IrrigacaoQtdPessoas" class="control-label"></label>
                    <input asp-for="IrrigacaoQtdPessoas" class="form-control" />
                    <span asp-validation-for="IrrigacaoQtdPessoas" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Estufa" /> @Html.DisplayNameFor(model => model.Estufa)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="DataCadastro" class="control-label"></label>
                    <input asp-for="DataCadastro" class="form-control" />
                    <span asp-validation-for="DataCadastro" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
