        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IrrigacaoSemana)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IrrigacaoTempo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IrrigacaoQtdPessoas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estufa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TipoFlorId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TipoFlorId">Details</a> |
