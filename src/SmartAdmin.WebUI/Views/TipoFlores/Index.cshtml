            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IrrigacaoSemana)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IrrigacaoTempo)
